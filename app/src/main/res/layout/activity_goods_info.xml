<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >
    <!--tools:context=".GoodsInfoActivity"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_Goods_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="项目详情"
            android:textColor="#564c4c"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/ib_good_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_more" />

    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeee" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_good_info_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/infotest"/>

                    <TextView
                        android:id="@+id/tv_good_info_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="拟上科创板机器人项目"
                        android:textColor="#323427" />

                    <TextView
                        android:id="@+id/tv_good_info_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="目前我设计的辅助产品有：完成刷碗、洗衣、收拾餐桌、收拾床、取来送走特定的物品等等诸多相应的辅助产品（以供参考），来达到让机器人在完成家庭事物过程中的最简单化、多远化，为机器人走进普通家庭奠定基础。可以利用这个模式"
                        android:textColor="#767f86" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_proportion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="82%"
                    android:layout_gravity="end"
                    android:layout_marginRight="20sp"/>

                    <ProgressBar
                        android:id="@+id/progressbar_money"
                        android:layout_width="350dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_good_info_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="已获得意向投资:￥50222万"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_surplus_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="50sp"
                android:text="剩余天数：18天"/>
        </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#eeee" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="众投状态："/>
                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="进行中"
                            android:textColor="#ff4040"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="由"
                            android:layout_marginLeft="60sp"
                            android:textColor="#3c3d40" />

                        <TextView
                            android:id="@+id/tv_good_info_store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="科创股份公司"
                            android:textColor="#ff4040" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="负责"
                            android:textColor="#3c3d40" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#eeee" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#eeee" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="提示：普通项目投资后将由该公司联系，3个工作日内可更改。其他特殊商品（如手办）的售后以页面说明为准"
                        android:textColor="#3c3d40" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#eeee" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="详情"
                        android:textColor="#3c3d40"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空气净化器主要由马达、风扇、空气过滤网等系统组成，其工作原理为：机器内的马达和风扇使室内空气循环流动，污染的空气通过机内的空气过滤网后将各种污染物清除或吸附，将空气不断电离，产生大量负离子，被微风扇送出，形成负离子气流，达到清洁、净化空气的目的。"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="80dp" />
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_goods_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_good_info_callcenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/icon_callserver_unpressed"
                android:gravity="center"
                android:padding="2dp"
                android:text="联系客服"
                android:textColor="#393b3e" />

            <TextView
                android:id="@+id/tv_good_info_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/good_uncollected"
                android:gravity="center"
                android:padding="2dp"
                android:text="收藏"
                android:textColor="#393b3e" />
            <Button
                android:id="@+id/Btn_lead"
                android:layout_width="120dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="我要领头"
                android:background="#000"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_follow_casting"
                android:layout_width="120dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:background="#f00"
                android:gravity="center"
                android:text="我要跟投"
                android:textColor="#fff" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
